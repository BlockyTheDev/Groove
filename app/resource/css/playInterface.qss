QWidget#playingInterface {
    background-color: black;
}

QWidget#smallestModeInterface {
    background-color: transparent;
}

QLabel {
    background-color: transparent;
}

QLabel#guideLabel{
    color:white;
    font: 25px 'Microsoft YaHei';
}

QLabel[name='smallestModeSongNameLabel']{
    color: white;
    font:12pt 'Microsoft YaHei';
    font-weight: bold;
}

QLabel[name='smallestModeSongerNameLabel'] {
    color: white;
    font: 11pt 'Microsoft YaHei';
}

QPushButton#randomPlayAllButton{
    color: rgb(72, 210, 242);
    font: 23px "Microsoft YaHei";
    background-color: transparent;
}

QPushButton#randomPlayAllButton:hover {
    color: rgb(57, 168, 193);
}

QPushButton#randomPlayAllButton:pressed {
    color: rgb(28, 84, 96);
}

QSlider#smallestModeSlider{
    height: 5px;
    background: transparent;
}

QSlider::groove:horizontal {
    border: none;
    background-color: transparent;
}

QSlider::handle:horizontal {
    width: 0px;
    height: 0px;
}

QSlider::sub-page:horizontal {
    /*已划过部分的颜色*/
    background: white;
}

QSlider::add-page:horizontal {
    background-color: rgba(255, 255, 255, 0.25);
}