QScrollArea {
    border: none;
    background-color: transparent;
}

QWidget {
    background-color: transparent;
}

QLabel {
    font-family: 'Microsoft YaHei';
}

QLabel[isPlay='false']{
    font-size: 24px;
    color: rgba(255, 255, 255, 0.8);
}

QLabel[isPlay='true']{
    font-size: 30px;
    color: rgb(255, 255, 255);
}